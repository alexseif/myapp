{% extends 'base.html.twig' %}

{% block title %}Scenario{% endblock %}

{% block content %}
    <a href="{{ path('scenario_index') }}" class="btn btn-primary">back to list</a>
    <h1>Scenario</h1>
    <a href="{{ path('scenario_edit', {'id': scenario.id}) }}" class="btn btn-primary">edit</a>
    {{ include('scenario/_delete_form.html.twig') }}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ scenario.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ scenario.title }}</td>
        </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-around">
        {{ include('scenario/_details.html.twig', {'scenario':scenario}) }}
        {{ include('scenario/_objectives.html.twig', {'scenario':scenario}) }}
    </div><!-- .d-flex -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#scenario-details tbody tr').dblclick(function () {
                $('#check-' + $(this).data('id')).click();
            });
            $('#scenario-objective tbody tr').dblclick(function () {
                $('#check-' + $(this).data('id')).click();
            });
        });
    </script>
{% endblock %}