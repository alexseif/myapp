{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  {#<form class="form">
    <input type="text" placeholder="Username">
    <input type="password" placeholder="Password">
    <button type="submit" id="login-button">Login</button>
  </form>#}
  <form action="{{ path("fos_user_security_check") }}" method="post" class="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    <label for="username"></label><input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"
                                         required="required" placeholder="Username"/>
    <label for="password"></label><input type="password" id="password" class="form-control" name="_password" required="required" placeholder="Password"/>
    <label for="remember_me">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
      {{ 'security.login.remember_me'|trans }}
    </label>
    <button type="submit"
            class=""
            id="_submit"
            name="_submit"
            value="{{ 'security.login.submit'|trans }}">
      {{ 'security.login.submit'|trans }}
    </button>
  </form>
{% endblock fos_user_content %}
