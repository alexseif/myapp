<form method="post" action="{{ path('scenario_details_delete', {'scenario': scenario, 'id': scenario_detail.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ scenario_detail.id) }}">
    <button class="btn">Delete</button>
</form>
