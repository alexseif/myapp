<form method="post" action="{{ path('tasks_delete', {'id': task.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button class="btn btn-danger btn-confirm mb-4"><i class="fa fa-trash"></i></button>
</form>
