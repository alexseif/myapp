<form method="post" action="{{ path('shopping_item_delete', {'id': shopping_item.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_item.id) }}">
    <button class="btn-confirm btn btn-sm" title="Delete">
        <i class="fa fa-trash"></i>
    </button>
</form>
