{% extends 'base.html.twig' %}
{% import "macros/a.html.twig" as a %}

{% block panelTitle %}ShoppingItem{% endblock %}
{% block panelBack %}{{ a.back('shopping_item_index') }}{% endblock %}
{% block panelHeadingRight %}
    {{ a.edit('shopping_item_edit', {'id':shopping_list.id}) }}
    {{ include('shopping_item/_delete_form.html.twig') }}
{% endblock %}
{% block panelBody %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ shopping_item.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ shopping_item.name }}</td>
        </tr>
        <tr>
            <th>Est</th>
            <td>{{ shopping_item.est }}</td>
        </tr>
        <tr>
            <th>Priority</th>
            <td>{{ shopping_item.priority }}</td>
        </tr>
        <tr>
            <th>Urgency</th>
            <td>{{ shopping_item.urgency }}</td>
        </tr>
        <tr>
            <th>Completed</th>
            <td>{{ shopping_item.completed ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>CompletedAt</th>
            <td>{{ shopping_item.completedAt ? shopping_item.completedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Eta</th>
            <td>{{ shopping_item.eta ? shopping_item.eta|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>



{% endblock %}
