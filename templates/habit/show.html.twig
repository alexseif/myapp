{% extends 'base.html.twig' %}
{% import "macros/a.html.twig" as a %}

{% block floatingActions %}{{ a.add('habit_new') }}{% endblock %}
{% block panelBack %}{{ a.back('habit_index') }}{% endblock %}
{% block panelHeadingRight %}
    {{ a.edit('habit_edit', { 'id': habit.id }) }}
    {{ include('habit/_delete_form.html.twig') }}
{% endblock %}
{% block panelTitle %}Habit{% endblock %}
{% block panelBody %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ habit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ habit.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ habit.status }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
