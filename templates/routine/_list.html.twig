{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% import "macros/badges.html.twig" as badge %}
<div class="table-responsive">
    <table class="table table-striped table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Priority</th>
            <th scope="col">Sort</th>
            <th scope="col">Status</th>
            <th scope="col">CreatedAt</th>
            <th scope="col">UpdatedAt</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for routine in routines %}
            <tr>
                <th scope="row">{{ routine.title }}</th>
                <td>{{ routine.description }}</td>
                <td>{{ routine.priority }}</td>
                <td>{{ routine.sort }}</td>
                <td>{{ routine.status }}</td>
                <td>{{ routine.createdAt ? routine.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ routine.updatedAt ? routine.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {{ a.show('routine_show', { 'id': routine.id }) }}
                    {{ a.edit('routine_edit', { 'id': routine.id }) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>