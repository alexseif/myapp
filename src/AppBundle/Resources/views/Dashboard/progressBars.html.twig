{# Daily #}
{% if total > 0 %}
  <div class="progress">
    {% if issued is defined and issued > 0 %}
      {% set progress = progress - issued %}
      <div class="progress-bar bg-default" role="progressbar" aria-valuenow="{{ ((issued)/total)*100 }}" aria-valuemin="0" aria-valuemax="100"
           style="width:{{ ((issued)/total)*100 }}%" title="EGP {{ issued }}">
        EGP {{ issued }}
      </div>
    {% endif %}
    {% set percentage = (progress/total)*100 %}
    {% set remaining = (100 - percentage)|abs %}
    {% if percentage < 100 %}
      <div class="progress-bar bg-success" role="progressbar" aria-valuenow="{{ percentage }}" aria-valuemin="0" aria-valuemax="100"
           style="width:{{ percentage }}%" title="EGP {{ progress }}">
        EGP {{ progress }}
      </div>
      <div
        class="progress-bar bg-{{ ("now"|date("t") - "now"|date("d")) > 20 ? "info" : ("now"|date("t") - "now"|date("d")) > 10 ? "warning" : "danger" }}"
        role="progressbar" style="width:{{ remaining }}%" aria-valuenow="{{ remaining }}" aria-valuemin="0" aria-valuemax="100"
        title="EGP {{ total - progress }}">
        EGP {{ total - progress }}
      </div>
    {% else %}
      <div class="progress-bar bg-success" role="progressbar" aria-valuenow="{{ 200 - percentage }}" aria-valuemin="0" aria-valuemax="100"
           style="width:{{ 200 - percentage }}%" title='EGP {{ total }}'>
        EGP {{ total }}
      </div>
      <div class="progress-bar bg-info" role="progressbar" aria-valuenow="{{ remaining }}" aria-valuemin="0" aria-valuemax="100"
           style="width:{{ remaining }}%"
           title='EGP {{ progress - total }}'>
        EGP {{ progress - total }}
      </div>
    {% endif %}
  </div>
{% endif %}