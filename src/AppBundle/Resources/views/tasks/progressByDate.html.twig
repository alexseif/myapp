{% extends 'base.html.twig' %}
{% import "AppBundle:tasks:tasks_macros.html.twig" as tasks_view %}

{% block content %}
    <style>
        .task-list > .completed {
            opacity: inherit;
        }

        .completed, .completed * {
            text-decoration: inherit;
            background-image: inherit;
        }

        .completed {
            color: inherit;
        }
    </style>
    <div class='row'>
        <div class='col-lg-6'>
            <h3>{{ date|ago }} Activity</h3>
        </div>
        <div class='col-lg-6 text-right'>
            {{ form(form, {'attr': {'class': 'form-inline float-right'} }) }}
        </div>
    </div>
    <hr/>
    <div class="card-deck">
        <div class="card">
            <div class="card-header">Completed {{ date|ago }}</div>
            <div class="card-body">
                {{ tasks_view.ul(completedYesterday) }}
            </div>
        </div>
        <div class="card">
            <div class="card-header">Added {{ date|ago }}</div>
            <div class="card-body">
                {{ tasks_view.ul(createdYesterday) }}
            </div>
        </div>
        <div class="card">
            <div class="card-header">Updated {{ date|ago }}</div>
            <div class="card-body">
                {{ tasks_view.ul(updatedYesterday) }}
            </div>
        </div>
    </div>
{% endblock %}