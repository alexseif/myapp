{% extends 'base.html.twig' %}
{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% block title %}{{ objective.name }}{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {{ parent() }}
    </div>
  </div>
{% endblock %}
{% block floatingActions %}{{ a.add('objective_new') }}{% endblock %}
{% block panelBack %}{{ a.back('objective_index') }}{% endblock %}
{% block panelTitle %}{{ objective.name }}{% endblock %}
{% block panelHeadingRight %}
  {{ a.edit('objective_edit', { 'id': objective.id }) }}
  {{ forms.delete(delete_form) }}
{% endblock %}
{% block panelBody %}
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6">{{ objective.name }}</div>
      <div class="col-sm-6">{{ objective.description }}</div>
    </div>
  </div>
{% endblock %}
