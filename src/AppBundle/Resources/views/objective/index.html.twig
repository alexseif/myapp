{% extends 'base.html.twig' %}
{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% block title %}Objectives{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {{ parent() }}
    </div>
  </div>
{% endblock %}
{% block floatingActions %}{{ a.add('objective_new') }}{% endblock %}
{% block panelTitle %}Objectives{% endblock %}
{% block panelBody %}
  <table class="table table-condensed table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for objective in objectives %}
        <tr>
          <td>{{ objective.name }}</td>
          <td>
            <div class="btn-group">
              {{ a.show('objective_show', { 'id': objective.id }) }}
              {{ a.edit('objective_edit', { 'id': objective.id }) }}
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
