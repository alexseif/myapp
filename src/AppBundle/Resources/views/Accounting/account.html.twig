{% extends "::base.html.twig" %}

{% block title %}Accounting{% endblock %}

{% block content %}
  <div class="container">
    {{ form_start(accounting_filter_form) }}
    {{ form_widget(accounting_filter_form) }}
    <div class="pull-right">
      <a href="{{ path('accounting_index') }}" class="btn btn-link">Reset</a>
      <button type="submit" value="Filter" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-search"></span></button>
    </div>
    {{ form_end(accounting_filter_form) }}
    <div class="clearfix"></div>
  </div>
  <hr>
  <div class="container">
    <h2>Account: {{ account }}</h2>
    <div class="row">
      <div class="col-md-3">
        <h3>Client: {{ account.client }}</h3>
      </div>
      <div class="col-md-3 col-md-offset-6">
        <h3>Balance</h3>
        <table class="table table-bordered table-condensed table-responsive table-striped">
          <tbody>
            <tr><th>Start</th><td>{{ txnPeriod['rangeStart'] }}</td></tr>
            <tr><th>End</th><td>{{ txnPeriod['rangeEnd'] }}</td></tr>
            <tr><th>Balance</th><td>EGP 00.00</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <hr>
  <div class="container">
    <table class="table table-bordered table-condensed table-responsive table-striped">
      <thead>
        <tr>
          <th>Month</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        {% for item in monthsArray %}
          <tr>
            <td>{{ item|date('m-Y') }}</td>
            <td>EGP 00.00</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
