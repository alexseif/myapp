{% extends "::base.html.twig" %}

{% block title %}Accounting{% endblock %}

{% block content %}
  <style>
    .current-balance{text-align: center;}
  </style>
  <div class="container">
    {{ form_start(accounting_filter_form) }}
    {{ form_widget(accounting_filter_form) }}
    <div class="float-right">
      <a href="{{ path('accounting_index') }}" class="btn btn-link">Reset</a>
      <button type="submit" value="Filter" class="btn btn-secondary btn-sm">Search</button>
    </div>
    {{ form_end(accounting_filter_form) }}
    <div class="clearfix"></div>
  </div>
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>Account: {{ account }}</h2>
      </div>
      <div class="col-md-offset-6 col-md-3">
        <h3>Client: {{ account.client }}</h3>
      </div>
    </div>
    <div class="row current-balance">
      <div class="col-md-4">
        <h4>Current Balance</h4>
        <h5>EGP 00.00</h5>
      </div>
      <div class="col-md-4">
        <h4>Overdue</h4>
        <h5>EGP 00.00</h5>
      </div>
      <div class="col-md-4">
        <h4>Credits</h4>
        <h5>EGP 00.00</h5>
      </div>
    </div>
  </div>
  <hr>
  <div class="container">
    <h3>Issued Statements</h3>
    <table class="table table-bordered table-condensed table-responsive table-striped">
      <thead>
        <tr>
          <th>Statement number</th>
          <th>Coverage period</th>
          <th>Forward Balance</th>
          <th>Ending Balance</th>
        </tr>
      </thead>
      <tbody>
        {% for item in monthsArray %}
          <tr>
            <td>#333</td>
            <td>01/{{ item|date('m/Y') }} - 30/{{ item|date('m/Y') }}</td>
            <td>EGP 00.00</td>
            <td>EGP 00.00</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
