{% extends "::base.html.twig" %}
{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% block floatingActions %}
  {{ a.add('balance_new') }}
{% endblock %}

{% block panelTitle %}Budgeting{% endblock %}

{% block panelBody %}
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th>Item</th>
          <th>Date</th>
          <th>Days</th>
          <th>Value</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        {% for row in sheet %}
          <tr data-timestamp="{{ row.dateIndex.timestamp }}">
            <td>{{ row.item }}</td>
            <td>{{ row.dateIndex|date('d/m/Y') }}</td>
            <td>{{ row.days.invert ? "-"}} {{ row.days|date  }}</td>
            <td class="{{ (row.value <= 0) ? "text-success"}}">{{ row.value }}</td>
            <td class="{{ (row.balance <= 0) ? "text-danger"}}">{{ row.balance }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}