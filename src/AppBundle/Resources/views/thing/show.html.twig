{% extends 'base.html.twig' %}

{% block body %}
  <h1>Thing</h1>

  <table>
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ thing.id }}</td>
      </tr>
      <tr>
        <th>Name</th>
        <td>{{ thing.name }}</td>
      </tr>
      <tr>
        <th>Createdat</th>
        <td>{% if thing.createdAt %}{{ thing.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
      </tr>
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('thing_index') }}">Back to the list</a>
    </li>
    <li>
      <a href="{{ path('thing_edit', { 'id': thing.id }) }}">Edit</a>
    </li>
    <li>
      {{ form_start(delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(delete_form) }}
    </li>
  </ul>
{% endblock %}
