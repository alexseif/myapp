{% extends 'base.html.twig' %}

{% block title %}AppBundle:WorkWeek:displayWorkWeek{% endblock %}
{% block container %}
    <style>
        .list-group-item-label {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 60px;
            padding: 0.75rem 0.5rem;
            background-color: gray;
        }

        .list-group-item-value {
            position: absolute;
            left: 60px;
            top: 0;
            height: 100%;
            width: 60px;
            padding: 0.75rem 0.5rem;
            background-color: #000;
        }
    </style>
    <h1>Welcome to the WorkWeek:displayWorkWeek page</h1>
    <ul class="list-group">
        {% for day, hours in workWeek %}
            {% set width = hours/24 * 100 %}
            <li class="list-group-item">
                <div class="day text-bold list-group-item-label">{{ day|slice(0, 3) }}</div>
                <div class="hours list-group-item-value" style="width: {{ width }}vw;">{{ hours }}</div>
                <span>&nbsp;</span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
