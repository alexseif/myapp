{% extends 'base.html.twig' %}
{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% block panelBack %}{{ a.back('pricerate_index') }}{% endblock %}

{% block panelTitle %}{{ priceRate.name }} <small>Price Rate</small>{% endblock %}
{% block panelHeadingRight %}
  {{ a.edit('pricerate_edit', {'id':priceRate.id}) }}
  {{ forms.delete(delete_form) }}
{% endblock %}
{% block panelWrapperClass %}col-md-4 col-md-push-4{% endblock %}
  
{% block panelBody %}
    <table class="table table-condensed table-bordered table-striped">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ priceRate.id }}</td>
        </tr>
        <tr>
          <th>Name</th>
          <td>{{ priceRate.name }}</td>
        </tr>
        <tr>
          <th>Unit</th>
          <td>{{ priceRate.unit }}</td>
        </tr>
        <tr>
          <th>Priceperunit</th>
          <td>{{ priceRate.pricePerUnit }}</td>
        </tr>
      </tbody>
    </table>
  {% endblock %}