{% extends 'base.html.twig' %}

{% block body %}
  <h1>Tasklist</h1>

  <table>
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ taskList.id }}</td>
      </tr>
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('tasklist_index') }}">Back to the list</a>
