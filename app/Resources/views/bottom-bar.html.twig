<nav class="bg-dark d-print-none" id="bottom-bar">
  <span id="bottom-bar-btn">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 30 22"><path fill="#AAA" d="M21.1 18.3c.8.8.8 2 0 2.8-.4.4-.9.6-1.4.6s-1-.2-1.4-.6L12 14.8l-6.3 6.3c-.4.4-.9.6-1.4.6s-1-.2-1.4-.6a2 2 0 0 1 0-2.8L9.2 12 2.9 5.7a2 2 0 0 1 0-2.8 2 2 0 0 1 2.8 0L12 9.2l6.3-6.3a2 2 0 0 1 2.8 0c.8.8.8 2 0 2.8L14.8 12l6.3 6.3z"></path></svg>  
  </span>
  <ul class="nav" {{ 1 == app.request.cookies.get('bottom-bar-closed') ? 'style="display:none;"' }}>
    <li class="dropdown">
      {% set contracts = bottom_bar.getContracts() %}
      <a class="btn btn-secondary btn-sm dropdown-toggle" href="#" role="button" 
         id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" 
         aria-expanded="false">
        Contracts
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        {% for contract in contracts %}
          <a class="dropdown-item" 
             href="{{ path('contract_show', {'id': contract.id}) }}">
            {{ contract.name }}
          </a>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="{{ contract.percentage }}"
                 aria-valuemin="0" aria-valuemax="100" style="width:{{ contract.percentage }}%">
              {{ contract.percentage|number_format }}% 
            </div>
          </div>
        {% endfor %}
      </div>
    </li>
    <li class="dropdown">
      {% set tasks = bottom_bar.getTasks() %}
      <a class="btn btn-secondary btn-sm dropdown-toggle" href="#" role="button" 
         id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" 
         aria-expanded="false">
        Tasks
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        {% for task in tasks %}
          <a class="dropdown-item" 
             href="{{ path('focus') }}#task_{{task.id}}">
            {{ task.task }}
            <span class="badge badge-info float-right">{{task.taskList}}</span>
          </a>
        {% endfor %}
      </div>
    </li>
    <li class="dropdown">
      {% set things = bottom_bar.getThings() %}
      <a class="btn btn-secondary btn-sm dropdown-toggle" href="#" role="button" 
         id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" 
         aria-expanded="false">
        Things
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        {% for thing in things %}
          <a class="dropdown-item" 
             href="{{ path('thing_show', {'id': thing.id}) }}">
            {{ thing.name }}
          </a>
        {% endfor %}
      </div>
    </li>
  </ul>

</nav>