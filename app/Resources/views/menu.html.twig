{% extends 'base.html.twig' %}
{% block title %}Menu{% endblock %}

{% block container %}
  <div class="card-columns">
    {% for key, items in menu %}
{#      <div class="col-lg-3">#}
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">{{ key }}</h3>
          </div>
          <ul class="list-group">
            {% for item in items %}
              <li class="list-group-item">
                <a href="{{ path(item) }}">{{ item|replace({'_': ' '})|capitalize }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
{#      </div>#}
    {% endfor %}
  </div>
{% endblock %}
