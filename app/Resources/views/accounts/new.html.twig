{% extends 'base.html.twig' %}

{% block panelTitle %}New Account{% endblock %}
{% block panelBack %}<a href="{{ path('accounts_index') }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-arrow-left"></span></a>{% endblock %}

{% block panelBody %}
    {{ form_start(account_form) }}
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-11">
                {{ form_widget(account_form) }}
            </div>
            <div class="col-sm-1">
                <button type="submit" value="Create" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span></button>
            </div>
        </div>
    </div>
    {{ form_end(account_form) }}
{% endblock %}