<ul class="list-group">
    {% for account in accounts %}
        <li class="list-group-item">
            <a href="{{ path('accounts_show', { 'id': account.id }) }}" class="btn btn-default">{{ account.name }}</a>
            <a href="{{ path('accounts_edit', { 'id': account.id }) }}" class="btn btn-primary edit-fixed-link"><span class="glyphicon glyphicon-pencil"></span></a>
        </li>
    {% endfor %}
</ul>