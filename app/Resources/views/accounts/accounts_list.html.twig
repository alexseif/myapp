<div class="table-responsive">
    <table class="table table-condensed">
        <tbody>
            {% for account in accounts %}
                <tr>
                    <td class="btn-group btn-group-justified">
                        <a href="{{ path('accounts_show', { 'id': account.id }) }}" class="btn btn-default">{{ account.name }}</a>
                        <a href="{{ path('accounts_edit', { 'id': account.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>