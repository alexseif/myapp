<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.name }}</td>
                <td>
                    <a href="{{ path('accounts_show', { 'id': account.id }) }}">show</a>
                    <a href="{{ path('accounts_edit', { 'id': account.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>