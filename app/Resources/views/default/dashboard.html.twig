{% extends 'base.html.twig' %}

{% block container %}
    <div class="floating-action dropup">
      <a class="btn btn-primary dropdown-toggle" type="button" id="dahboardMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="glyphicon glyphicon-plus"></span>
      </a>
      <ul class="dropdown-menu floating-actions" aria-labelledby="dahboardMenuButton">
        <li><a href="{{ path('tasks_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></a></li>
        <li><a href="{{ path('tasklists_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-tasks"></span></a></li>
        <li><a href="{{ path('days_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-th-large"></span></a></li>
        <li><a href="{{ path('accounts_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-piggy-bank"></span></a></li>
        <li><a href="{{ path('accountbalances_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-shopping-cart"></span></a></li>
        <li><a href="{{ path('accountpayments_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-credit-card"></span></a></li>
      </ul>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {% if tasks|length %}
                <div class="panel panel-primary">
                    <div class="panel-heading">UnListed</div>
                    {% include 'tasks/tasks_list.html.twig' %}
                </div>
            {% endif %}
            {% for taskList in taskLists %}
                {% if taskList.tasks|length %}
                    {% set tasks = taskList.tasks %}
                    <div class="panel panel-primary">
                        <div class="panel-heading">{{ taskList.name }}</div>
                        {% include 'tasks/tasks_list.html.twig' %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        {% if days|length %}
            <div class="col-sm-4">
                <div class="panel panel-transparent">
                    <div class="panel-heading">Days</div>
                    {% include 'days/days_list.html.twig' %}
                </div>
            </div>
        {% endif %}
        {% if accounts|length %}
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Balance</div>
                    {% include 'accounts/accounts_list.html.twig' %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
