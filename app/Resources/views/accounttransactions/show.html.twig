{% extends 'base.html.twig' %}

{% block container %}
    <h1>AccountTransactions</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ accountTransaction.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ accountTransaction.amount }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ accountTransaction.note }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if accountTransaction.createdAt %}{{ accountTransaction.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('accounttransactions_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('accounttransactions_edit', { 'id': accountTransaction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
