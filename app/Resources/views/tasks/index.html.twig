{% extends 'base.html.twig' %}

{% block container %}
    <h1>Tasks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Task</th>
                <th>Completed</th>
                <th>Completedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <td><a href="{{ path('tasks_show', { 'id': task.id }) }}">{{ task.id }}</a></td>
                    <td>{{ task.task }}</td>
                    <td>{% if task.completed %}Yes{% else %}No{% endif %}</td>
                    <td>{% if task.completedAt %}{{ task.completedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('tasks_show', { 'id': task.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('tasks_edit', { 'id': task.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tasks_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
