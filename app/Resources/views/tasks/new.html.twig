{% extends 'base.html.twig' %}

{% block container %}
    <div class="actions clearfix">
        <div class="btn-group pull-right">
            <a href="{{ path('tasks_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span></a>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">New task</span>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-10">
                    {{ form_widget(form) }}
                </div>
                <div class="col-sm-2">
                    <button type="submit" value="Create" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span></button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
