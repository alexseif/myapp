{# app/Resources/task/show.html #}
{% extends 'base.html.twig' %}
{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% block panelBack %}{{ a.back('task_index') }}{% endblock %}
{% block panelTitle %}{{ task.name }}{% endblock %}  
{% block panelBody %}
  <table>
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ task.id }}</td>
      </tr>
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('task_index') }}">Back to the list</a>
    </li>
    <li>
      <a href="{{ path('task_edit', { 'id': task.id }) }}">Edit</a>
    </li>
    <li>
      {{ form_start(task_delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(task_delete_form) }}
    </li>
  </ul>
{% endblock %}
