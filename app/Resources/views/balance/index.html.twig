{% extends 'base.html.twig' %}
{% import "macros/a.html.twig" as a %}
{% block floatingActions %}{{ a.add('balance_new') }}{% endblock %}

{% block panelTitle %}Balance{% endblock %}
{% block panelBody %}
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th>Item</th>
          <th>Balance</th>
          <th>Date</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for balance in balances %}
          <tr>
            <td><a href="{{ path('balance_show', { 'id': balance.id }) }}">{{ balance.title }}</a></td>
            <td>{{ balance.amount }}</td>
            <td>{% if balance.balanceAt %}{{ balance.balanceAt|date('Y-m-d') }}{% endif %}</td>
            <td>{% if balance.createdAt %}{{ balance.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
              <div class="btn-group">
                {{ a.show('balance_show', { 'id': balance.id }) }}
                {{ a.edit('balance_edit', { 'id': balance.id }) }}
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}

