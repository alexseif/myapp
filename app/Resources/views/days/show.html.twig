{% extends 'base.html.twig' %}

{% block body %}
    <h1>Days</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ day.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ day.name }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{% if day.deadline %}{{ day.deadline|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Complete</th>
                <td>{% if day.complete %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('days_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('days_edit', { 'id': day.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
