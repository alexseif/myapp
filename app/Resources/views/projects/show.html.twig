{% extends 'base.html.twig' %}

{% block panelTitle %}Project{% endblock %}
{% block panelTitleSmall %}{{ project.name }}{% endblock %}
{% block panelBack %}<a href="{{ path('projects_index') }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-arrow-left"></span></a>{% endblock %}

{% block panelBody %}
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ project.name }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ project.status }}</td>
                </tr>
                <tr>
                    <th>Startedat</th>
                    <td>{% if project.startedAt %}{{ project.startedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Createdat</th>
                    <td>{% if project.createdAt %}{{ project.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Actions</th>
                    <td><ul>
                            <li>
                                <a href="{{ path('projects_index') }}">Back to the list</a>
                            </li>
                            <li>
                                <a href="{{ path('projects_edit', { 'id': project.id }) }}">Edit</a>
                            </li>
                            <li>
                                {{ form_start(delete_form) }}
                                <input type="submit" value="Delete">
                                {{ form_end(delete_form) }}
                            </li>
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
