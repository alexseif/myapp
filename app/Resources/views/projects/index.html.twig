{% extends 'base.html.twig' %}
{% block floatingActions %}
    <a href="{{ path('projects_new') }}" class="bg-primary"><span class="glyphicon glyphicon-plus"></span></a>

{% endblock %}
{% block panelTitle %}Projects{% endblock %}
{% block panelBody %}
    <ul class="list-group task-list">
        {% for project in projects %}
            <li class="list-group-item">
                <a class="btn btn-default" title="{{ project.name }}" href="{{ path('projects_show', { 'id': project.id }) }}">
                    {{ project.name}}
                </a>
                <a href="{{ path('projects_edit', { 'id': project.id }) }}" class="btn btn-primary edit-fixed-link"><span class="glyphicon glyphicon-pencil"></span></a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
