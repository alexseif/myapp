{% extends 'base.html.twig' %}
{% block floatingActions %}
    <a href="{{ path('notes_new') }}" class="bg-primary"><span class="glyphicon glyphicon-plus"></span></a>

{% endblock %}
{% block panelTitle %}Notes{% endblock %}
{% block panelBody %}
    <table class="table">
        <tbody>
            {% for note in notes %}
                <tr>
                    <td>
                        {{ note.note }}
                        <span class="label label-info">{{ note.type|title }}</span> 
                        <span class="label label-primary">{% if note.createdAt %}{{ note.createdAt|date('Y-m-d H:i:s') }}{% endif %}</span>
                        <span class="pull-right">
                            <a href="{{ path('notes_show', {"id": note.id}) }}" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></a>
                            <a class="btn btn-primary" href="{{ path('notes_edit', { 'id': note.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        </span>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
