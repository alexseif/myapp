{% extends 'base.html.twig' %}
{% import "macros/forms.html.twig" as forms %}
{% import "macros/a.html.twig" as a %}
{% block floatingActions %}
  <a href="{{ path('notes_new') }}" role="button"
     title="note"
     class="btn btn-sm btn-primary">
    <span class="glyphicon glyphicon-plus"></span></a>

{% endblock %}

{% block content %}
  <div class="notes-container">
    {% for note in notes %}
      <div class="note-container">
        <div class="note">
          <p>{{ note.note|raw }}</p>
          <span class="label label-muted pull-right">{{ note.type|title }}</span> 
          <div class="btn-group btn-group-xs">
            <a class="btn btn-default btn-sm" href="{{ path('notes_show', {"id": note.id}) }}"><span class="glyphicon glyphicon-search"></span></a>
            <a class="btn btn-default  btn-sm" href="{{ path('notes_edit', { 'id': note.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="/js/notes.js"></script>
{% endblock %}
