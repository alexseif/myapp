{% extends 'base.html.twig' %}
{% block pageActions %}
  <div class="floating-action">
    <a href="{{ path('goal_new') }}" class="bg-primary"><span class="glyphicon glyphicon-plus"></span></a>
  </div>
{% endblock %}
{% block panelBack %}
  <a href="{{ path('goal_index') }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-arrow-left"></span></a>

{% endblock %}
{% block panelTitle %}{{ goal.name }}{% endblock %}
{% block panelHeadingRight %}
  {{ form_start(delete_form) }}
  <span class="btn-group btn-group-sm">
    <a href="{{ path('goal_edit', { 'id': goal.id }) }}" class="btn btn-primary btn-secondary">Edit</a>
    <input type="submit" value="Delete" class="btn btn-danger  btn-secondary">
  </span>
  {{ form_end(delete_form) }}
{% endblock %}
{% block panelBody %}
  <div class="panel-body">
    <div class="goal">
      {{ goal.name }}
      <div>Requirements</div>
      {{ dump(goal.requirements) }}
    </div>
  </div>
{% endblock %}
