<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- Latest compiled and minified CSS -->
            {#            <link rel="stylesheet" href="/css/bootstrap.min.css"/>#}
            <!-- Optional theme -->
            {# <link rel="stylesheet" href="/css/bootstrap-theme.min.css"/>#}
            <!-- Bootswatch Darkly theme-->
            <link rel="stylesheet" href="/css/bootstrap.darkly.min.css"/>
            <!-- Custom Styling -->
            <link rel="stylesheet" href="/css/custom.css"/>

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block nav %}
                <nav class="navbar navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path('dashboard') }}">myapp</a>
                        </div>
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon glyphicon-check"></span> <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="{{ path('tasklists_index') }}">Task Lists</a></li>
                                        <li><a href="{{ path('tasks_index') }}">Tasks</a></li>
                                        <li><a href="{{ path('tasks_new') }}"><span class="glyphicon glyphicon-plus"></span> Task</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-tasks"></span> <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="{{ path('days_index') }}">Days</a></li>
                                        <li><a href="{{ path('days_new') }}"><span class="glyphicon glyphicon-plus"></span> Day</a></li>
                                        <li><a href="{{ path('days_archive') }}">Archive</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-folder-open"></span> <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="{{ path('accounts_index') }}">Accounts</a></li>
                                        <li><a href="{{ path('accounts_new') }}"><span class="glyphicon glyphicon-plus"></span> Account</a></li>
                                        <li><a href="{{ path('accountbalances_index') }}"><span class="glyphicon glyphicon-piggy-bank"></span></a></li>
                                        <li><a href="{{ path('accountbalances_new') }}"><span class="glyphicon glyphicon-plus"></span> <span class="glyphicon glyphicon-piggy-bank"></span></a></li>
                                        <li><a href="{{ path('accountpayments_index') }}"><span class="glyphicon glyphicon-credit-card"></span></a></li>
                                        <li><a href="{{ path('accountpayments_new') }}"><span class="glyphicon glyphicon-plus"></span> <span class="glyphicon glyphicon-credit-card"></span></a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock %}
            <div class="container">
                {% block container %}
                {% block pageActions %}{% endblock %}
            {% block formStart %}{% endblock %}
            {% block panel %}
                <div class="panel panel-{% block panelClass %}default {% endblock %}">
                    {% block panelHeading %}
                        <div class="panel-heading">
                            <span class="panel-title">{% block panelTitle %}{% endblock %}<small> {% block panelTitleSmall %}{% endblock %}</small></span>
                            <div class="pull-right">
                            {% block panelHeadingRight %}{% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% block panelBody %}{% endblock %}
        {% block panelFooter %}{% endblock %}
    </div>
{% endblock %}
{% block formEnd %}{% endblock %}
{% endblock %}
</div>
{% endblock %}
{% block javascripts %}
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/js/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
{% endblock %}
</body>
</html>
